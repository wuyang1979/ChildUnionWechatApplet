page,
.page {
    background-color: white;
}

.message-area {
    padding: 10px 15px;
}

.message-title {
    font-size: 20px;
    text-align: center;
    margin-bottom: 20px;
}

.message-item {
    width: 100%;
    display: inline-flex;
    align-items: center;
    border-bottom: 1px solid rgb(228, 228, 228);
    padding: 10px 0;
}

.message-item-image {
    width: 50px;
    height: 50px;
    border-radius: 50%;
}

.message-item-name {
    font-size: 17px;
    margin-left: 15px;
}

.chevron-right {
    width: 30px;
    height: 30px;
    opacity: 0.3;
    margin-left: auto;
}

.point{
    width: 30px;
    height: 30px;
    margin-left: auto;
    margin-right: 5px;
}