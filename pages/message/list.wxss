.page,
page {
    background-color: #f7f7f7;
}

.message-list {
    padding: 15px 0;
}

.message-title {
    font-size: 20px;
    text-align: center;
    margin-bottom: 20px;
}

.message-item {
    display: inline-flex;
    align-items: center;
    background-color: white;
    border-bottom: 1px solid #eee;
    width: 95%;
    padding: 10px 0 10px 20px;
}

.message-item-name {
    width: 80px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    margin: 0 10px;
}

.message-item-behavior {
    margin-left: 15px;
    font-size: 14px;
}

.message-item-time {
    font-size: 13px;
    color: #a09a9a;
    margin-left: auto;
}

.chevron-right {
    width: 30px;
    height: 30px;
    opacity: 0.4;
    margin-left: auto;
    margin-right: 10rpx;
}

.point{
    width: 30px;
    height: 30px;
    margin-left: auto;
    margin-right: 5px;
}