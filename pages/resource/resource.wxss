.container {
    padding: 0;
    align-items: inherit;
}

.resource-item {
    display: flex;
    border-bottom: 1px solid #e5e5e5;
    padding-left: 10px;
    position: relative;
    height: 120px;
    align-items: center;
}

.resource-item image {
    width: 120px;
    border-radius: 10px;
}

.resource-title {
    display: inline-block;
    margin: 5px 10px 0 10px;
    position: absolute;
    top: 15px;
    left: 140px;
}

.huaxian {
    text-decoration: line-through;
    text-decoration-color: rgb(141, 141, 141);
}

.price-normal {
    display: inline-block;
    margin-left: 10px;
    font-size: 0.9em;
    position: absolute;
    bottom: 25px;
    left: 140px;
}

.price-vip {
    display: inline-block;
    margin-left: 10px;
    font-size: 0.9em;
    position: absolute;
    bottom: 25px;
    right: 25px;
}

.commodity-tips {
    width: 75%;
    position: fixed;
    top: 90rpx;
    left: 105rpx;
    background-color: #f8f8f8;
    border: 1px solid #d0d0d0;
    border-radius: 20px;
    font-size: 14px;
    overflow-y: auto;
}

.close {
    width: 30px;
    position: fixed;
    top: -47px;
    right: 43px;
}

.image-cover {
    width: 38px;
    height: 38px;
    position: absolute;
    top: 1px;
    right: 0;
    cursor: pointer;
}

.content,
.rules,
.address,
.contact,
.phone {
    margin: 0 0 10px 10px;
}

.item-tip,
.item-cont {
    display: inline-block;
    vertical-align: top;
}

.item-tip {
    width: 70px;
}

.item-cont {
    width: 90%;
    margin-top: 5px;
    margin-left: 5px;
}

.title {
    margin: 40px 0 10px 5px;
    text-align: center;
    font-size: 18px;
}

.confirm{
    margin-top: 30px;
    color: white;
    background-color: rgb(60, 184, 233);
    width: 50%;
    margin-bottom: 30px;
}