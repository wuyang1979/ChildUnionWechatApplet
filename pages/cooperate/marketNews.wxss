.page,
page {
  background-color: white;
}


.one-message,
.one-activity {
  margin-bottom: 2px;
  background-color: white;
  border-bottom: 1rpx solid #e5e5e5;
}

.navigation-bar {
  padding: 10px 10px 0 10px;
  background-color: white;
}

.navigation-bar-item {
  display: inline-block;
  width: 15%;
  margin-right: 15px;
  height: 50px;
  padding: 5px 10px 0 10px;
}

.navigation-bar-item:first-child {
  margin-left: 15px;
}

.navigation-bar-item:last-child {
  margin-right: 0;
}

.weui-panel__hd {
  font-size: 1em;
}

.cooperation-title {
  padding: 5px 0 5px 10px;
  font-size: 18px;
  text-align: center;
  background-color: white;
  border-bottom: 1rpx solid #e5e5e5;
}

.activity-title {
  padding: 5px 0 5px 10px;
}

.activity-title {
  padding-top: 10px;
}

.weui-media-box {
  padding: 5px 15px;
}

.weui-panel:after,
.weui-panel:before {
  content: " ";
  position: absolute;
  left: 0;
  right: 0;
  height: 1px;
  color: #e5e5e5;
}

.weui-panel::before {
  border-width: 0;
}

.weui-media-box__image {
  width: 100%;
  height: 170px;
}

.weui-panel:after {
  border-bottom: 0rpx;
}

.btn-grade {
  background-color: #F3434B;
  color: white;
}

.weui-media-box__img {
  float: left;
}

.weui-media-box__desc {
  font-size: 15px;
}

.weui-media-box__title {
  font-size: 17px;
  white-space: inherit;
  margin-bottom: 3px;
}

.weui-media-box__bottom_info {
  font-size: 13px;
  display: inline-block;
  margin-right: 5px;
  color: #969696;
}

.userinfo-avatar {
  width: 50rpx;
  height: 50rpx;
  margin: 1rpx;
  border-radius: 50%;
  border-color: white;
  border-style: solid;
  border-width: 1px;
  /* margin-top:5px; */

}

.source {
  margin-bottom: -7px;
}

.username {
  display: inline-block;
  margin-left: 5px;
  vertical-align: top;

}

.time {
  display: inline-block;
  vertical-align: top;
  margin-left: 30%;
  text-align: right;
}

.btn-addmessage {
  position: fixed;
  padding: 0;
  width: 60px;
  height: 60px;
  bottom: 5%;
  right: 5%;
  background-color: rgba(255, 255, 255, 0);
  border: none;
}

button::after {
  border: none;
}

.btn-addmessage image {
  margin: 0;
  padding: 0;
  width: 60px;
  height: 60px;
}

.weui-media-box__desc {
  white-space: pre-wrap;
}

.text-message {
  word-break: break-all;
}

.slide-image {
  width: 100%;
  height: 200px;
}

swiper {
  height: 200px;
}

.marquee_container {
  background-color: rgb(255, 255, 255);
  height: 40rpx;
  line-height: 40rpx;
  position: relative;
  width: 100%;
  border-bottom-width: 1px;
  border-bottom-style: solid;
  border-bottom-color: rgb(228, 228, 228);
  padding-bottom: 5px;
}

.marquee_container:hover {
  /* 不起作用 */
  animation-play-state: paused;
}

.marquee_text {
  color: #ff0000;
  font-size: 28rpx;
  display: inline-block;
  white-space: nowrap;
  animation-name: around;
  animation-duration: 12s;
  /*过渡时间*/
  animation-iteration-count: infinite;
  animation-timing-function: linear;
}

/* 活动 */
.top-banner image {
  width: 100%;
  height: 200px;
}

.top-title,
.show-title {
  background-color: white;
  padding-top: 10px;
  margin-bottom: 5px;
  height: 40px;
}

.title-desc {
  margin-left: 5px;
  border-left-color: rgb(52, 129, 231);
  border-left-width: 5px;
  border-left-style: solid;
}

