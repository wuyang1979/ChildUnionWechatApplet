<wxs src="../../utils/tool.wxs" module="tool" />

<view class="page">
  <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
    <block wx:for="{{imgUrls}}" wx:key="item.link">
      <!--  是否是本地页面 -->
      <swiper-item wx:if="{{item.isLocal}}">
        <navigator url="{{item.link}}" hover-class="navigator-hover" open-type="switchTab" wx:if="{{item.isTab}}">
          <image src="{{item.url}}" class="slide-image" width="355" height="150" />
        </navigator>
        <navigator url="{{item.link}}" hover-class="navigator-hover" open-type="navigate" wx:else>
          <image src="{{item.url}}" class="slide-image" width="355" height="150" />
        </navigator>
      </swiper-item>
      <!-- 跳转公众号页面 -->
      <swiper-item wx:else>
        <navigator url="{{bannerDefault + '?id=' + item.id}}" hover-class="navigator-hover" open-type="switchTab"
          wx:if="{{item.isTab}}">
          <image src="{{item.url}}" class="slide-image" width="355" height="150" />
        </navigator>
        <navigator url="{{bannerDefault + '?id=' + item.id}}" hover-class="navigator-hover" open-type="navigate"
          wx:else>
          <image src="{{item.url}}" class="slide-image" width="355" height="150" />
        </navigator>
      </swiper-item>

    </block>
  </swiper>

  <!-- 市场动态 -->
  <view class="cooperation" id="cooperation">
    <view class="cooperation-title">市场动态</view>
    <view class="one-message" wx:for="{{messageList}}" wx:for-index="index" data-index="{{index}}" data-id="{{item.id}}"
      data-title="{{item.title}}" data-message="{{item.message}}" data-type="{{item.messageType}}"
      data-last="{{item.lastString}}" data-card="{{item.cardId}}" data-realname="{{item.cardInfo.realname}}" realname
      data-job="{{item.cardInfo.job}}" data-company="{{item.cardInfo.company}}"
      data-headimgurl="{{item.cardInfo.headimgurl}}" data-phone="{{item.cardInfo.phone}}" data-read="{{item.readCount}}"
      data-like="{{item.giveLike}}" data-stype="{{item.sourceType}}" data-spath="{{item.sourcePath}}"
      wx:key="{{item.id}}" bindtap="oneMessage">

      <view class="weui-panel weui-panel_access">
        <!--view class="weui-panel__hd">
                  <image bindtap="bindViewTap" class="userinfo-avatar" src="{{item.cardInfo.headimgurl}}" background-size="cover"></image>
                  <text class="username">{{item.cardInfo.realname}}</text>
                  <text class="time" >{{item.lastString}}</text>
            </view-->
        <view class="weui-panel__bd">
          <view class="weui-media-box weui-media-box_text">
            <view class="weui-media-box__title weui-media-box__title_in-text">
              {{item.title}}</view>
            <view class="weui-media-box__img" wx:if="{{!!item.sourcePath}}" class="source">
              <view wx:if="{{item.sourceType == 0}}">
                <image class="weui-media-box__image" src="{{'https://www.qinzi123.com/'+item.sourcePath}}"
                  mode="aspectFill">
                </image>
              </view>
            </view>
            <view class="weui-media-box__bottom_info">
              {{tool.translateMessageType(item.messageType)}}</view>
            <view class="weui-media-box__bottom_info">
              {{item.cardInfo.realname}}</view>
            <view class="weui-media-box__bottom_info">
              {{item.lastString}}</view>
            <!-- <view class="weui-media-box__desc"><text class="text-message">{{item.message}}</text>
          </view> -->
          </view>
        </view>
      </view>
    </view>
  </view>

  <button class="weui-btn btn-addmessage" bindtap="onGotUserInfo">
    <image src="/pages/img/add-message1.jpg">
    </image>

  </button>

</view>