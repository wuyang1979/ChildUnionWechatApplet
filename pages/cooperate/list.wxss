.page,
page {
  background-color: #eee;
}

.activity {
  position: relative;
}

.cooperation{
  position: relative;
}

.avtivity-more {
  position: absolute;
  top: 6px;
  right: 20px;
  padding: 5px 10px;
  font-size: 14px;
}

.cooperation-more{
  position: absolute;
  top: 2px;
  right: 20px;
  padding: 5px 10px;
  font-size: 14px;
}

.one-message,
.one-activity {
  margin-bottom: 2px;
  background-color: white;
}

.navigation-bar {
  padding: 10px 10px 0 10px;
  background-color: white;
  width: 100%;
}

.navigation-bar-item {
  display: inline-block;
  width: 14%;
  margin-right: 15px;
  height: 50px;
  padding: 5px 10px 0 10px;
}

.navigation-bar-item:first-child {
  margin-left: 15px;
}

.weui-panel__hd {
  font-size: 1em;
}

.activity-title,
.cooperation-title {
  padding: 5px 0 5px 10px;
}

.activity-title {
  padding-top: 10px;
}

.weui-media-box__image,
.one-campaign-img {
  width: 100%;
}

.weui-panel:after {
  border-bottom: 0rpx;
}

.btn-grade {
  background-color: #F3434B;
  color: white;
}

.weui-media-box__img {
  float: left;
}

.weui-media-box__desc {
  font-size: 15px;
}

.weui-media-box__title {
  font-size: 15px;
  white-space: inherit;
  font-weight: 550;
}

.weui-media-box__bottom_info {
  font-size: 13px;
  display: inline-block;
  margin-right: 5px;
}

.userinfo-avatar {
  width: 50rpx;
  height: 50rpx;
  margin: 1rpx;
  border-radius: 50%;
  border-color: white;
  border-style: solid;
  border-width: 1px;
  /* margin-top:5px; */

}

.username {
  display: inline-block;
  margin-left: 5px;
  vertical-align: top;

}

.time {
  display: inline-block;
  vertical-align: top;
  margin-left: 30%;
  text-align: right;
}

.btn-addmessage {
  position: fixed;
  padding: 0;
  width: 60px;
  height: 60px;
  bottom: 5%;
  right: 5%;
  background-color: rgba(255, 255, 255, 0);
  border: none;
}

button::after {
  border: none;
}

.btn-addmessage image {
  margin: 0;
  padding: 0;
  width: 60px;
  height: 60px;
}

.weui-media-box__desc {
  white-space: pre-wrap;
}

.text-message {
  word-break: break-all;
}

.slide-image {
  width: 100%;
  height: 200px;
}

swiper {
  height: 200px;
}

.marquee_container {
  background-color: rgb(255, 255, 255);
  height: 40rpx;
  line-height: 40rpx;
  position: relative;
  width: 100%;
  border-bottom-width: 1px;
  border-bottom-style: solid;
  border-bottom-color: rgb(228, 228, 228);
  padding-bottom: 5px;
}

.marquee_container:hover {
  /* 不起作用 */
  animation-play-state: paused;
}

.marquee_text {
  color: #ff0000;
  font-size: 28rpx;
  display: inline-block;
  white-space: nowrap;
  animation-name: around;
  animation-duration: 12s;
  /*过渡时间*/
  animation-iteration-count: infinite;
  animation-timing-function: linear;
}

/* 活动 */
.top-banner image {
  width: 100%;
  height: 200px;
}

.top-title,
.show-title {
  background-color: white;
  padding-top: 10px;
  margin-bottom: 5px;
  height: 40px;
}

.title-desc {
  margin-left: 5px;
  border-left-color: rgb(52, 129, 231);
  border-left-width: 5px;
  border-left-style: solid;
}

.one-campaign {
  background-color: white;
  padding: 5px;
  margin-bottom: 5px;
}

.campaign-img image {
  width: 100%;
  height: 150px;
}

.campaign-title {
  font-size: 1.1em;
}

.campaign-time {
  font-size: 0.7em;
  color: #777777;
  text-align: right;
}