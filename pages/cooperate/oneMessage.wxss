@import "../common/messageReplyTemp.wxss";

page {
  margin-top: 0px;
  background-color: #eee;
}

.reply-bannber {
  margin: 10px;
  font-size: 0.8em;
}

.content,
.reply-content {
  background-color: white;
  padding: 10px 15px;
}

.title {
  font-size: 1.3em;
  font-weight: bold;
  word-break: break-all;
  padding: 10px;
}

.message-photo {
  width: 80rpx;
  height: 80rpx;
  margin: 0;
  border-radius: 50%;
  margin-top: 5px;
}

.message-left-info,
.message-right-info {
  display: inline-block;
  margin-left: 5px;
}

.message-right-info {
  font-size: 0.95em;
}

.recommandList {
  margin-bottom: 10px;
}

.weui-media-box__title {
  font-size: 13px;
}

.placeholder-view {
  width: 100%;
  height: 50rpx;
}

.business-right-info {
  display: inline-block;
  position: absolute;
  right: 30px;
  top: 12px;
}

.author {
  position: relative;
}

.business-btn-not-follow,
.business-btn-follow {
  font-size: 11px;
  width: 55px;
  border-radius: 5px;
  padding-left: 10px;
  padding-right: 10px;
}

.business-btn-not-follow {
  background-color: #028fd7;
  color: white;
}

.business-btn-follow {
  background-color: rgb(238, 238, 238);
}

.name-text {
  color: #1d6eaf
}

.message-company-info {
  font-size: 0.75em;
  color: #999;
}


.company-text {
  font-size: 11px;
}

.last-text {
  font-size: 11px;
}


.message {
  margin-top: 20px;
  display: flex;
  flex-flow: row wrap;
  align-content: space-around;
  font-size: 0.8em;
}

.source {
  margin-top: 20px;
}

.attach-message {
  margin-top: 15px;
  font-size: 0.7em;
}


.read-count,
.like-count {
  display: inline-block;
}

.read-count {
  width: 75%;
  margin-left: 15px;
  color: rgb(172, 169, 169);
}

.one-pic {
  width: 100%;
  margin-bottom: 10px;
}

.like-count image {
  margin: 0 auto;
  padding: 0;
}

.like-count {
  color: #018fd1;
  padding: 5px;
}

.bottom-button {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 42px;
  background-color: white;
  border-top: thick #c6c6c6;
  padding-bottom: 10px;
}

.bottom-left-button,
.bottom-middle-button,
.bottom-right-button {
  /*width: 45%;*/
  display: inline-block;
  text-align: center;
}

.bottom-left-button {
  width: 30%;
}

.bottom-middle-button {
  width: 35%;
  color: #018fd1;
  font-size: 1em;
}

.bottom-right-button {
  width: 35%;
}

.bottom-class {
  height: 100%;
  font-size: 1em;
}

.bottom-img {
  width: 20px;
  height: 20px;
  padding-bottom: 5px;
  vertical-align: middle;
}

.bottom-right-img {
  width: 100px;
  height: 33px;
  padding-bottom: 5px;
  vertical-align: middle;
}

.bottom-txt {
  color: #666666;
  padding-top: 0px;
}

.middle-bottom-txt {
  color: #018fd1;
  padding-top: 0px;
}

.bottom-class::after {
  border: 0rpx;
  font-size: 1em;
}

.text-message {
  word-break: break-all;
  font-size: 15px;
}

.weui-media-box {
  border-bottom-style: solid;
  border-bottom-width: 1px;
  border-bottom-color: #eee;
}

.weui-media-box__desc {
  -webkit-line-clamp: initial;
}