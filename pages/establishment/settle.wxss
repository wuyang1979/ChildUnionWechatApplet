.page,
page {
    background-color: #eee;
}

.title {
    padding: 10px;
    font-size: 17px;
    text-align: center;
    background-color: white;
    border-bottom: 1px solid #eee;
}

.main-image-area {
    background-color: white;
    padding: 15px 20px;
    display: flex;
}

.add-main-image-area,
.upload-main-image-area {
    background-color: #eee;
    width: 45%;
    height: 150px;
    position: relative;
    display: inline-flex;
    flex-direction: column;
    align-items: center;
}

.main-image-left {
    margin-right: 50rpx;
}

.add-main-image {
    width: 50px;
    height: 50px;
    margin-top: 70rpx;
}

.add-main-image-tip {
    font-size: 14px;
    margin-top: 5px;
    position: relative;
}

.add-main-image-tip-1 {
    font-size: 12px;
    margin-top: 5px;
    position: relative;
}

.main-image {
    width: 100%;
    height: 100%;
}

.base-name-area,
.topic-tpye-area {
    background-color: white;
    margin-top: 10px;
    padding: 15px 20px;
}

.location-btn {
    font-size: 13px;
    padding: 4px 10px;
    line-height: inherit;
    color: white;
    background-color: rgb(60, 184, 233);
    border-radius: 5px;
}

.location-top,
.location-bottom {
    display: inline-flex;
}

.location-top {
    margin-bottom: 10px;
}

.base-name-tip {
    position: relative;
    margin-right: 270rpx;
}

.longitude-value,
.latitude-value {
    width: 100px;
    border-bottom: 1px solid #eee;
}

.latitude-tip {
    margin-left: 20rpx;
}

.base-name-input,
.topic-tpye {
    margin-top: 10px;
    padding-bottom: 5px;
    border-bottom: 1px solid #eee;
}

.title-tip {
    color: #999;
    font-size: 0.7em;
    text-align: right;
}

.topic-tpye {
    color: #82898e;
}

.topic-tpye-cont {
    position: relative;
}

.right-icon {
    position: absolute;
    right: 0;
    top: -4rpx;
    width: 30px;
    opacity: 0.4;
}

.item_container {
    display: inline-flex;
    padding: 5px;
    width: 30%;
}

.item_container:nth-child(3n+3) {
    margin-right: 0;
}

.select_icon {
    width: 25px;
    height: 25px;
}

.topic-tpye-select-area {
    padding: 10px 0;
    position: relative;
}

.black {
    color: black;
}

.select-confirm {
    position: absolute;
    bottom: 2rpx;
    right: 50rpx;
    font-size: 15px;
    padding: 2px 10px;
    margin-left: 0;
    line-height: inherit;
    color: white;
    background-color: rgb(60, 184, 233);
    border-radius: 5px;
}

.tips {
    font-size: 13px;
    margin-left: 5px;
    color: #838f90;
}

.message-input {
    padding-top: 10px;
}

.message-content {
    border-radius: 10px;
    padding: 5px;
}

.message-tip {
    color: #999;
    font-size: 0.7em;
    text-align: right;
}

textarea {
    border: 1rpx solid rgb(221, 221, 221);
    width: 99%;
    height: 150px;
}

.submit-area {
    background-color: white;
    padding: 10px 0;
}

.submit-btn {
    background-color: rgb(1, 143, 215);
    width: 90%;
    border: 2px solid;
    border-radius: 25px;
    color: white;
}

.message-content-main-business,
.message-content-main-demand {
    border-radius: 10px;
    padding: 5px;
    height: 100px;
}

.needed {
    width: 15px;
    height: 15px;
    position: absolute;
    top: 5px;
    left: -15px;
}

.auth-tips {
    background-color: white;
    font-size: 14px;
    color: #ff4e4e;
    text-align: right;
    padding-right: 35px;
}